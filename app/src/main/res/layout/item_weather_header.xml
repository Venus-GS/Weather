<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <TextView
        android:id="@+id/tv_header_local"
        android:layout_width="@dimen/constraint_match"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/weather_header_local"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/tv_header_today"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/weather_header_local" />

    <TextView
        android:id="@+id/tv_header_today"
        android:layout_width="@dimen/constraint_match"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/weather_header_today"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_header_tomorrow"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/tv_header_local"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/weather_header_today" />

    <TextView
        android:id="@+id/tv_header_tomorrow"
        android:layout_width="@dimen/constraint_match"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/weather_header_tomorrow"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/tv_header_today"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/weather_header_tomorrow" />

</androidx.constraintlayout.widget.ConstraintLayout>